<section class="pb-4">
  <div class="d-flex justify-content-between">
    <div>
      <img src="<%= @user.photo %>" alt='User Avatar' style="width:20%" />
    </div>
    <div class='flex-grow-1 d-flex justify-content-between align-items-center'>
      <a href="/users/<%= @user.id %>/posts">
        <h1><%= @user.name %></h1>
      </a>
      <p>Number of posts: <%= @user.posts_counter || 0 %></p>
    </div>
  </div>
  <div class='border border-dark p-4'>
    <h3>Bio</h3>
    <%= @user.bio %>
 
  </div>
  <div class='posts mt-5'>
    <% @user.recent_posts.each_with_index do |post,index| %>
      <div class="border border-dark p-2 mb-2">
        <h3>post #<%= index+1 %></h3>
        <p><%= post.text%></p>
        <div class="d-flex justify-content-end">
          <span class="">Comments: <%= post.comments_counter || 0 %> </span>
          <span class="float-right">, Likes: <%= post.likes_counter || 0 %></span>
        </div>
      </div>
    <% end %>
  </div>
  <a href="<%= @user.id%>/posts" class="d-flex justify-content-center"> See all posts</a>
</section>
